[Unit]
Description=Bridge MQTT to wifi relays
After=syslog.target
After=network.target

[Service]
Type=simple
User=root
Group=root

ExecStart=/bin/sh -c '/usr/bin/python /srv/docker/homeassistant/config/helpers/mqtt2yurt.py > /var/log/mqtt2yurt 2>&1'

# Give a reasonable amount of time for the server to start up/shut down
TimeoutSec=300
Restart=on-failure
RestartSec=150

[Install]
WantedBy=multi-user.target